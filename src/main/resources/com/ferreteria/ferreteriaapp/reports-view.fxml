<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ferreteria.ferreteriaapp.controller.ReportsController">

    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <top>
        <VBox spacing="10">
            <Label text="Reporte de Ventas">
                <font><Font name="System Bold" size="20"/></font>
            </Label>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Desde:" />
                <DatePicker fx:id="dpInicio" prefWidth="120"/>

                <Label text="Hasta:" />
                <DatePicker fx:id="dpFin" prefWidth="120"/>

                <Button text="Generar Reporte" onAction="#generarReporte"
                        style="-fx-background-color: #3498db; -fx-text-fill: white;"/>

                <Label fx:id="lblRolInfo" text="(Viendo como: ...)" textFill="grey"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 10 0 0 0;">
            <TableView fx:id="tablaVentas" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="Folio" prefWidth="50"/>
                    <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120"/>
                    <TableColumn fx:id="colCliente" text="Cliente" prefWidth="150"/>
                    <TableColumn fx:id="colEmpleado" text="Vendedor" prefWidth="100"/>

                    <TableColumn fx:id="colCosto" text="Costo" prefWidth="90"/>
                    <TableColumn fx:id="colGanancia" text="Ganancia" prefWidth="90"/>

                    <TableColumn fx:id="colTotal" text="Venta Total" prefWidth="100"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
            <Label text="Total del Periodo: ">
                <font><Font size="16"/></font>
            </Label>
            <Label fx:id="lblTotalPeriodo" text="0.00" textFill="#27ae60">
                <font><Font name="System Bold" size="20"/></font>
            </Label>
        </HBox>
    </bottom>

</BorderPane>