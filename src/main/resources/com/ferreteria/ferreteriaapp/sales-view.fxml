<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.ferreteria.ferreteriaapp.controller.SalesController">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>

    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 0 0 15 0;">
            <Label text="Nueva Venta"><font><Font name="System Bold" size="18"/></font></Label>
            <Separator orientation="VERTICAL"/>
            <Label text="Cliente:"/>
            <ComboBox fx:id="cmbCliente" promptText="Seleccione Cliente" prefWidth="250"/>
            <Label fx:id="lblFecha" text="Fecha: --/--/----" textFill="grey"/>
        </HBox>
    </top>

    <center>
        <HBox spacing="15">
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Agregar Productos" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtBuscarProducto" promptText="Buscar por cÃ³digo o nombre..."/>
                <TableView fx:id="tablaBusqueda" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colProdNombre" text="Producto" prefWidth="150"/>
                        <TableColumn fx:id="colProdPrecio" text="Precio" prefWidth="70"/>
                        <TableColumn fx:id="colProdStock" text="Stock" prefWidth="60"/>
                    </columns>
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                </TableView>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Cantidad:"/>
                    <Spinner fx:id="spinCantidad" prefWidth="80" editable="true"/>
                    <Button text="Agregar al Carrito ->" onAction="#agregarProducto" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                </HBox>
            </VBox>

            <Separator orientation="VERTICAL"/>

            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Carrito de Compras" style="-fx-font-weight: bold;"/>
                <TableView fx:id="tablaCarrito" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colCarProducto" text="Producto" prefWidth="150"/>
                        <TableColumn fx:id="colCarCant" text="Cant." prefWidth="50"/>
                        <TableColumn fx:id="colCarPrecio" text="P. Unit." prefWidth="70"/>
                        <TableColumn fx:id="colCarTotal" text="Subtotal" prefWidth="80"/>
                    </columns>
                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                </TableView>

                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button text="-1 Unidad" onAction="#quitarUnoDelCarrito" style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>

                    <Button text="Borrar Fila" onAction="#borrarFilaDelCarrito" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                </HBox>

                <VBox style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Label text="Subtotal:" />
                        <Label fx:id="lblSubtotal" text="0.00" />
                    </HBox>

                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Label text="Descuento ($):" />
                        <TextField fx:id="txtDescuento" prefWidth="80" text="0" alignment="CENTER_RIGHT"/>
                    </HBox>
                    <HBox alignment="CENTER_RIGHT">
                        <Label text="TOTAL FINAL: "><font><Font size="16"/></font></Label>
                        <Label fx:id="lblTotal" text="0.00"><font><Font name="System Bold" size="22"/></font></Label>
                    </HBox>
                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Label text="Paga con ($):" />
                        <TextField fx:id="txtPago" prefWidth="80" promptText="Monto" alignment="CENTER_RIGHT"/>
                    </HBox>

                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Label text="Cambio:" style="-fx-font-weight: bold;"/>
                        <Label fx:id="lblCambio" text="0.00" textFill="#e67e22">
                            <font><Font name="System Bold" size="14"/></font>
                        </Label>
                    </HBox>
                    <Button text="FINALIZAR VENTA" maxWidth="Infinity" onAction="#finalizarVenta" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;"/>
                </VBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>